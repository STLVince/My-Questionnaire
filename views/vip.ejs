<% include partials/head %>
<div class="col-xs-12" style="height:50px;"></div>
<% if (locals.isVip) { %>
    <h1 class="text-center">您已成为会员，尊享以下特权</h1>
<% } else { %>
    <h1 class="text-center">成为会员，尊享特权</h1>
<% } %>
<div class="col-xs-12" style="height:20px;"></div>
<% if (!locals.isVip) { %>
<center><button class="btn btn-primary btn-lg" style="border-radius: 20px; padding-left: 30px;padding-right: 30px" onclick="pay(true)">开通会员</button></center>
<% } %>
<div class="col-xs-12" style="height:50px;"></div>
<div class="row" style="margin: 0">
    <div class="col-xs-12 col-sm-4">
        <center><div class="card" style="width: 18rem">
            <center><img class="card-img-top" src="/js/img/icon-1.png" alt="Card image cap" style="margin-top: 10px;width: 120px; height: 120px;"></center>
            <div class="card-body">
                <h5 class="card-title text-center">详细信息</h5>
                <p class="card-text text-center">自由查看商品详细数据</p>
            </div>
        </div></center>
    </div>
    <div class="col-xs-12 col-sm-4">
        <center><div class="card" style="width: 18rem">
            <center><img class="card-img-top" src="/js/img/icon-2.png" alt="Card image cap" style="margin-top: 10px; width: 120px; height: 120px;"></center>
            <div class="card-body">
                <h5 class="card-title text-center">人工客服</h5>
                <p class="card-text text-center">随时咨询人工客服</p>
            </div>
        </div></center>
    </div>
    <div class="col-xs-12 col-sm-4">
        <center><div class="card rounded-lg" style="width: 18rem">
            <center><img class="card-img-top" src="/js/img/icon-3.png" alt="Card image cap" style="margin-top: 10px;width: 120px; height: 120px;"></center>
            <div class="card-body">
                <h5 class="card-title text-center">一手资料</h5>
                <p class="card-text text-center">快速获取商品报价第一手资料</p>
            </div>
        </div></center>
    </div>
    
</div>
<div class="row" style="margin: 0">
    <div class="col-xs-12 col-sm-4"></div>
    <div class="col-xs-12 col-sm-4">
        <div class="pay" style="
            position: fixed;
            top: 0px;
            bottom: 0px;
            left: 0px;
            right: 0px;
            width: 400px;
            height: 570px;
            margin: auto;
            background-color: white;
            z-index: 1;
            display: none;
        ">
            <div class="pay-image">
                <center><img src="/js/img/pay.jpg" style="width: 300px"/></center>
            </div>
            <div class="pay-bottom" style="position: absolute;bottom: 0px;width: 100%;height: 80px;background-color: #F5F5F5;">
                <div class="pay-bottom-return" style="cursor: pointer;color: black;text-decoration: none;font-family: AvenirNext-Bold;font-size: 17px;line-height: 84px;position: absolute;right: 30px;" onclick="pay(false)">返回</div>
                <div class="pay-bottom-return" style="cursor: pointer;color: black;text-decoration: none;font-family: AvenirNext-Bold;font-size: 17px;line-height: 84px;position: absolute;right: 100px;" onclick="charge()">支付成功</div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-4"></div>
    <div class="pay-background" style="
        position: fixed;
        top: 0px;
        left: 0px;
        height: 100%;
        width: 100%;
        opacity: 0.67;
        -webkit-filter: blur(4px);
        -moz-filter: blur(4px);
        -o-filter: blur(4px);
        -ms-filter: blur(4px);
        filter: blur(4px);
        background-color: black; 
        display: none;
    "></div>
</div>

<% include partials/foot %>